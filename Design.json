{
    "designSystem": {
      "name": "Fresh Grocery Design System",
      "version": "1.0.0",
      "description": "A warm, approachable design system for grocery and food applications with organic illustrations and friendly UI patterns",
      
      "colorPalette": {
        "primary": {
          "darkGreen": "#4A5D52",
          "mediumGreen": "#6B8068",
          "lightGreen": "#8FA085"
        },
        "secondary": {
          "warmOrange": "#FF8C42",
          "lightOrange": "#FFB366",
          "peachBackground": "#FFF0E6"
        },
        "accent": {
          "priceOrange": "#FF6B35",
          "discountOrange": "#E85A2B"
        },
        "neutrals": {
          "white": "#FFFFFF",
          "lightGray": "#F8F9FA",
          "mediumGray": "#E9ECEF",
          "darkGray": "#6C757D",
          "textPrimary": "#212529",
          "textSecondary": "#6C757D"
        },
        "semantic": {
          "success": "#28A745",
          "warning": "#FFC107",
          "error": "#DC3545",
          "info": "#17A2B8"
        }
      },
  
      "typography": {
        "fontFamily": {
          "primary": "Inter, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif",
          "display": "Poppins, Inter, sans-serif"
        },
        "fontSizes": {
          "xs": "12px",
          "sm": "14px",
          "base": "16px",
          "lg": "18px",
          "xl": "20px",
          "2xl": "24px",
          "3xl": "30px",
          "4xl": "36px",
          "5xl": "48px"
        },
        "fontWeights": {
          "normal": 400,
          "medium": 500,
          "semibold": 600,
          "bold": 700
        },
        "lineHeights": {
          "tight": 1.25,
          "normal": 1.5,
          "relaxed": 1.75
        }
      },
  
      "spacing": {
        "scale": "8px base unit",
        "sizes": {
          "xs": "4px",
          "sm": "8px",
          "md": "16px",
          "lg": "24px",
          "xl": "32px",
          "2xl": "48px",
          "3xl": "64px",
          "4xl": "96px"
        }
      },
  
      "borderRadius": {
        "none": "0px",
        "sm": "4px",
        "md": "8px",
        "lg": "12px",
        "xl": "16px",
        "2xl": "24px",
        "full": "9999px"
      },
  
      "shadows": {
        "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
        "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
        "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
        "card": "0 2px 8px rgba(0, 0, 0, 0.08)"
      },
  
      "components": {
        "heroCard": {
          "description": "Large illustrative card with organic shapes and friendly character",
          "structure": {
            "container": {
              "backgroundColor": "primary.darkGreen",
              "borderRadius": "xl",
              "padding": "2xl",
              "position": "relative",
              "overflow": "hidden"
            },
            "illustration": {
              "style": "organic, hand-drawn aesthetic",
              "elements": ["friendly character", "organic shapes", "simple line art"],
              "colors": ["warm peach", "coral red", "white outlines"],
              "position": "centered"
            },
            "text": {
              "title": {
                "fontSize": "3xl",
                "fontWeight": "bold",
                "color": "white",
                "marginBottom": "sm"
              },
              "subtitle": {
                "fontSize": "lg",
                "color": "white",
                "opacity": 0.9
              }
            }
          }
        },
  
        "navigationTabs": {
          "description": "Horizontal tab navigation with rounded active state",
          "structure": {
            "container": {
              "display": "flex",
              "gap": "md",
              "padding": "md",
              "backgroundColor": "neutrals.lightGray"
            },
            "tab": {
              "padding": "sm lg",
              "borderRadius": "full",
              "fontSize": "base",
              "fontWeight": "medium",
              "transition": "all 0.2s ease"
            },
            "activeTab": {
              "backgroundColor": "secondary.peachBackground",
              "color": "textPrimary"
            },
            "inactiveTab": {
              "backgroundColor": "transparent",
              "color": "textSecondary"
            }
          }
        },
  
        "productCard": {
          "description": "Clean product card with image, name, price, and quantity selector",
          "structure": {
            "container": {
              "backgroundColor": "white",
              "borderRadius": "lg",
              "padding": "md",
              "boxShadow": "card",
              "display": "flex",
              "alignItems": "center",
              "gap": "md"
            },
            "productImage": {
              "width": "60px",
              "height": "60px",
              "borderRadius": "md",
              "objectFit": "cover"
            },
            "productInfo": {
              "flex": 1,
              "display": "flex",
              "flexDirection": "column",
              "gap": "xs"
            },
            "productName": {
              "fontSize": "base",
              "fontWeight": "medium",
              "color": "textPrimary"
            },
            "productDetails": {
              "fontSize": "sm",
              "color": "textSecondary"
            },
            "priceTag": {
              "backgroundColor": "accent.priceOrange",
              "color": "white",
              "fontSize": "xs",
              "fontWeight": "medium",
              "padding": "2px 6px",
              "borderRadius": "sm",
              "display": "inline-block"
            },
            "quantitySelector": {
              "width": "24px",
              "height": "24px",
              "border": "2px solid neutrals.mediumGray",
              "borderRadius": "full",
              "display": "flex",
              "alignItems": "center",
              "justifyContent": "center"
            }
          }
        },
  
        "categorySection": {
          "description": "Section with category title and product grid",
          "structure": {
            "container": {
              "marginBottom": "xl"
            },
            "header": {
              "display": "flex",
              "alignItems": "center",
              "gap": "sm",
              "marginBottom": "lg"
            },
            "categoryIcon": {
              "width": "24px",
              "height": "24px",
              "color": "textSecondary"
            },
            "categoryTitle": {
              "fontSize": "lg",
              "fontWeight": "semibold",
              "color": "textPrimary"
            },
            "productGrid": {
              "display": "grid",
              "gap": "md",
              "gridTemplateColumns": "repeat(auto-fill, minmax(300px, 1fr))"
            }
          }
        },
  
        "promoCard": {
          "description": "Promotional banner with discount information",
          "structure": {
            "container": {
              "backgroundColor": "secondary.peachBackground",
              "borderRadius": "lg",
              "padding": "lg",
              "display": "flex",
              "alignItems": "center",
              "gap": "md",
              "marginBottom": "xl"
            },
            "content": {
              "flex": 1
            },
            "discountText": {
              "fontSize": "sm",
              "color": "textSecondary",
              "marginBottom": "xs"
            },
            "discountAmount": {
              "fontSize": "2xl",
              "fontWeight": "bold",
              "color": "accent.priceOrange"
            },
            "promoImage": {
              "width": "80px",
              "height": "60px",
              "borderRadius": "md"
            }
          }
        },
  
        "searchBar": {
          "description": "Search input with icon and placeholder",
          "structure": {
            "container": {
              "position": "relative",
              "marginBottom": "lg"
            },
            "input": {
              "width": "100%",
              "padding": "md md md 48px",
              "backgroundColor": "white",
              "border": "1px solid neutrals.mediumGray",
              "borderRadius": "lg",
              "fontSize": "base",
              "placeholder": "textSecondary"
            },
            "searchIcon": {
              "position": "absolute",
              "left": "md",
              "top": "50%",
              "transform": "translateY(-50%)",
              "color": "textSecondary"
            }
          }
        },
  
        "emptyState": {
          "description": "Empty state with message and call-to-action",
          "structure": {
            "container": {
              "textAlign": "center",
              "padding": "3xl md"
            },
            "title": {
              "fontSize": "xl",
              "fontWeight": "semibold",
              "color": "textPrimary",
              "marginBottom": "sm"
            },
            "message": {
              "fontSize": "base",
              "color": "textSecondary",
              "marginBottom": "lg"
            }
          }
        },
  
        "totalBadge": {
          "description": "Floating total price indicator",
          "structure": {
            "container": {
              "backgroundColor": "accent.priceOrange",
              "color": "white",
              "fontSize": "sm",
              "fontWeight": "medium",
              "padding": "xs sm",
              "borderRadius": "full",
              "position": "absolute",
              "top": "sm",
              "right": "sm"
            }
          }
        }
      },
  
      "layoutPatterns": {
        "singleColumn": {
          "description": "Main content area with sidebar navigation",
          "maxWidth": "1200px",
          "margin": "0 auto",
          "padding": "0 md"
        },
        "cardGrid": {
          "description": "Responsive grid for product cards",
          "display": "grid",
          "gap": "md",
          "gridTemplateColumns": {
            "mobile": "1fr",
            "tablet": "repeat(2, 1fr)",
            "desktop": "repeat(3, 1fr)",
            "large": "repeat(4, 1fr)"
          }
        },
        "sectionSpacing": {
          "marginBottom": "2xl"
        }
      },
  
      "animations": {
        "transitions": {
          "fast": "0.15s ease-out",
          "normal": "0.2s ease-out",
          "slow": "0.3s ease-out"
        },
        "hover": {
          "scale": "scale(1.02)",
          "shadow": "0 8px 25px rgba(0, 0, 0, 0.15)"
        },
        "focus": {
          "outline": "2px solid primary.mediumGreen",
          "outlineOffset": "2px"
        }
      },
  
      "designPrinciples": {
        "warmAndApproachable": "Use organic shapes, friendly illustrations, and warm colors to create an inviting atmosphere",
        "scannable": "Clear hierarchy with consistent spacing and typography makes content easy to scan",
        "trustworthy": "Clean layouts, consistent pricing display, and clear CTAs build user confidence",
        "efficient": "Streamlined interactions with smart defaults and predictable patterns",
        "accessible": "High contrast ratios, clear focus states, and semantic structure"
      },
  
      "illustrationStyle": {
        "characteristics": [
          "Hand-drawn, organic aesthetic",
          "Friendly, approachable characters",
          "Simple line art with minimal detail",
          "Warm color palette (peach, coral, orange)",
          "Flowing, curved shapes rather than geometric",
          "Playful but not childish",
          "Consistent stroke weight and style"
        ],
        "usage": "Use for hero sections, empty states, and promotional content to add personality and warmth"
      },
  
      "responsiveBreakpoints": {
        "mobile": "320px",
        "tablet": "768px",
        "desktop": "1024px",
        "large": "1440px"
      },
  
      "webAdaptations": {
        "navigation": "Convert mobile tabs to horizontal navigation bar with dropdowns for categories",
        "layout": "Use sidebar navigation for categories, main content area for products",
        "heroSection": "Expand hero card to full-width banner with larger illustration",
        "productGrid": "Display more products per row (2-4 depending on screen size)",
        "search": "Prominent search bar in header with advanced filtering options",
        "interactions": "Add hover states, tooltips, and smooth transitions for desktop experience"
      }
    }
  }